@model waGimnasio.Models.Departamento

@{
    ViewData["Title"] = "Delete";
}

<style>
    .section {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 50px 0;
    }

    .content-container {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
        font-family: Arial, sans-serif;
    }

        .content-container h1 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        .content-container h3 {
            font-size: 24px;
            margin-bottom: 10px;
        }

    .details-container {
        max-width: 400px;
        margin: 20px auto;
        text-align: left;
        font-family: Arial, sans-serif;
    }

        .details-container .row {
            margin-bottom: 20px;
        }

        .details-container .col-sm-2 {
            font-weight: bold;
        }

        .details-container .col-sm-10 {
            font-size: 16px;
        }

    .actions-container {
        margin-top: 20px;
    }

        .actions-container .btn-danger {
            margin-right: 10px;
            font-size: 16px;
        }

        .actions-container .action-link {
            font-size: 16px;
            color: #007bff;
            text-decoration: none;
        }
</style>

<div class="section">
    <div class="content-container">
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>

        <div class="details-container">
            <h4>Departamento</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
            </dl>
        </div>

        <form asp-action="Delete" class="actions-container">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="action-link">Back to List</a>
        </form>
    </div>
</div>
